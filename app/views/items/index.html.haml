%header
  %h1 Listing items
- @items.each do |item|
  %article.item
    %aside.actions
      = render 'investments/investment', :item => item

    %header
      = link_to 'Edit', edit_item_path(item)
    %h2
      = link_to item.name, item
    %p
      = item.description

%br

= link_to 'New Item', new_item_path
